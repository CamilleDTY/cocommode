<%= render '/components/top-navbar' %>

<div class="container">
  <div class="d-flex cards align-items-center">
    <% @items.each do |item| %>
      <div class="card">
        <%= link_to item_path(item.id) do %>
          <div>
            <%= cl_image_tag item.main_picture, height: 280, width: 280, crop: :fill %>
          </div>
        <% end %>
        <div class="card_info d-flex">
          <div>
            <p> Taille: <%= item.size %> </p>
          </div>
          <div>
            <%= cl_image_tag User.find(item.user_id).profile_picture, class:"avatar", height: 30, width: 30, crop: :fill %>
            <p class="no-pad"> <%= User.find(item.user_id).first_name.capitalize %> </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

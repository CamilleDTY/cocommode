<%= render '/components/top-navbar' %>

<div class="container">
  <div class="d-flex align-items-center">
    <% @items.each do |item| %>
      <div>
        <div>
          <%= cl_image_tag item.main_picture, height: 280, width: 280, crop: :fill %>
        </div>
        <div class="d-flex">
          <div>
            <p> Taille: <%= item.size %> </p>
            <p> By <%= User.find(item.user_id).first_name.capitalize %> </p>
          </div>
          <div>
            <%= cl_image_tag User.find(item.user_id).profile_picture, class:"avatar", height: 30, width: 30, crop: :fill %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
